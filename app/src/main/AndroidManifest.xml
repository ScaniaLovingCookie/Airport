<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.christian.viennaeast">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".activities.Password">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewActivity"
            android:label="@string/title_activity_new"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.christian.viennaeast.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CrushActivity"
            android:label="@string/title_activity_crush"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.christian.viennaeast.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EventsActivity"
            android:label="@string/title_activity_events"
            android:parentActivityName=".activities.CrushActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.christian.viennaeast.activities.CrushActivity" />
        </activity>
        <activity
            android:name=".activities.EditEventActivity"
            android:label="@string/title_activity_edit_event"
            android:parentActivityName=".activities.EventsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.christian.viennaeast.activities.EventsActivity" />
        </activity>
        <activity
            android:name=".activities.GroundActivity"
            android:label="@string/title_activity_ground"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.christian.viennaeast.activities.MainActivity" />
        </activity>
        <activity android:name=".activities.ClosedActivity" />
        <activity android:name=".activities.EditPasswordActivity" />
        <activity
            android:name=".activities.ProceduresActivity"
            android:label="@string/title_activity_procedures"></activity>
    </application>

</manifest>