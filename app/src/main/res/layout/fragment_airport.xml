<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.christian.viennaeast.activities.MainActivity"
    android:orientation="vertical">

    <!--tools:showIn="@layout/app_bar_main"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_G01"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:onClick="AirportButtonClick"
            android:background="@drawable/button_background"
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="5"
            android:text="Gate 01" />

        <Button
            android:id="@+id/button_AP1"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:onClick="AirportButtonClick"
            android:text="Apron One"
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5" />

        <Button
            android:id="@+id/button_AP2"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_background"
            android:onClick="AirportButtonClick"
            android:text="Apron Two"
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/button_AP3"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Apron Three"
            android:onClick="AirportButtonClick"
            android:background="@drawable/button_background"
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/button_PAT"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Pattern"
            android:onClick="AirportButtonClick"
            android:background="@drawable/button_background"
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/button_GONE"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Gone"
            android:onClick="AirportButtonClick"
            android:background="@drawable/button_background"
            android:textColor="@color/colorAccent2"
            android:textSize="20dp"
            android:shadowColor="#000000"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowRadius="5"/>
    </LinearLayout>
</FrameLayout>
